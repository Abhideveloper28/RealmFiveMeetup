<div class="page-header"><h1><%= @group.group_name %></h1></div>
<div class="page-header"><h3>Users</h3></div>
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Role</th>
    </tr>
  </thead>
  <tbody style="background-color: #eeeeee;">
    <% @events.each do |event| %>
      <tr>
        <td><%= event.user.name %></td>
        <td><%= event.role_name %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class='row'>
  <div class='col-md-10'>
    <%= link_to 'Edit', edit_group_path(@group), class: 'btn btn-primary' %>
  </div>
  <div class='col-md-2'>
    <%= link_to 'Back', groups_path, class: 'btn btn-info' %>
  </div>
</div>
